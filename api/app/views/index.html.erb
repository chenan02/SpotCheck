<%= image_tag "App_Logo.png", id: "logo" %>
<h1> What do you want to do? </h1>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
  	
  	<%= form_tag places_path, method: "get", class: "input-group" do %>
  		<%= text_field_tag :query, nil, placeholder: "Search for...", class: "form-control" %>
  		<span class="input-group-btn">
  		<%= submit_tag "Search Map", id: "search-map-button", class: "btn btn-default" %>
  		</span>
	<% end %>
    <br>
  </div>
</div>

<h1> What's nearby? </h1>
<div class="span7 text-center">
	<%= button_to "Check Map", places_path, id: "check-map-button", class: "btn btn-primary btn-lg", method: :get %>
</div>
<br>
<br>
<% if session[:user] %>
	<div class="span7 text-center">
	<%= button_to "Favorites", user_favorites_path(user_id: session[:user]["id"]), id: "favorites-button", class: "btn btn-primary btn-lg", method: :get %>
<% end %>
</div>