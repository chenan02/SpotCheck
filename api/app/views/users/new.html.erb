<div class="container login-container">

  <%= form_for(@user, class: "form-signin") do |f| %>
    <h1 class="form-signin-heading">Sign Up</h1>
    <%= f.text_field :username, { placeholder: "Username", class: "form-control", autofocus: "", required: "" } %>
    <%= f.password_field :password, { placeholder: "Password", class: "form-control", required: "" } %>
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>

  <% end %>

</div>